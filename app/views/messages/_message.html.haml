.mainchat__messagelist--box
  .mainchat__messagelist--box--name
    = message.user.name
  .mainchat__messagelist--box--date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.mainchat__messagelist--message
  - if message.content.present?
    %p.mainchat__messagelist--message--content
      = message.content
  = image_tag message.image.url, class: 'Message__image' if message.image.present?